    <div class="modal fade" id="add_user" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm tài khoản</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/user_management/add" method="post">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Tên tài khoản</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Tên tài khoản">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Tên người dùng</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="full_name" name="full_name" placeholder="Tên người dùng">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Địa chỉ</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="address" name="address" placeholder="Địa chỉ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Quyền</label>
                        <div class="col-sm-9">
                            <select class="custom-select" id="role" name="role">
                                <option selected>Chọn</option>
                                <option value="beginner">Beginner</option>
                                <option value="worker">Worker</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <button type="submit" class="btn d-flex justify-content-end btn-warning">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>

      <div class="modal fade" id="edit_user" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Sửa tài khoản</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/user_management/edit" method="post">
                    <div class="form-group row hide">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">ID</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="id_edit" name="id" placeholder="ID">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Tên tài khoản</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="username_edit" name="username" placeholder="Tên tài khoản">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Tên người dùng</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="full_name_edit" name="full_name" placeholder="Tên người dùng">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="email_edit" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Địa chỉ</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="address_edit" name="address" placeholder="Địa chỉ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">Quyền</label>
                        <div class="col-sm-9">
                            <select class="custom-select" id="role_edit" name="role">
                                <option selected>Chọn</option>
                                <option value="beginner">Beginner</option>
                                <option value="worker">Worker</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <button type="submit" class="btn d-flex justify-content-end btn-warning">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>

      <div class="modal fade" id="delete_user" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Bạn có  chắc muốn xóa tài khoản này</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/user_management/delete" method="post">
                    <div class="form-group row hide">
                        <label for="inputEmail3" class="col-sm-3 col-form-label">ID</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="id_delete" name="id" placeholder="ID">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <button type="submit" class="btn d-flex justify-content-end btn-warning">Xóa</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>

      <script>
        var value;
        $(document).on("click", ".edit", function(){

            value = $(this).parents("tr").find("td");
            $('#id_edit').val($(value[0]).text());
            $('#username_edit').val($(value[1]).text());
            $('#full_name_edit').val($(value[2]).text());
            $('#email_edit').val($(value[3]).text());
            $('#address_edit').val($(value[4]).text());
            $('#role_edit').val($(value[5]).text());


        });
        $(document).on("click", ".delete", function(){

            value = $(this).parents("tr").find("td");
            $('#id_delete').val($(value[0]).text());
            $('#username_delete').val($(value[1]).text());
            $('#full_name_delete').val($(value[2]).text());
            $('#email_delete').val($(value[3]).text());
            $('#address_delete').val($(value[4]).text());
            $('#role_delete').val($(value[5]).text());
        });
      </script>

</body>

