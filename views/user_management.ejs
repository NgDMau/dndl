                                            <div class="table-data__tool-right">

                                                <form class="form-header" action="/user_management/find" method="POST">
                                                    <select class="au-select" name="row">
                                                        <option value="username">Tìm kiếm theo</option>
                                                        <option value="username">Tên tài khoản</option>
                                                        <option value="full_name">Tên người dùng</option>
                                                        <option value="email">Email</option>
                                                        <option value="address">Địa chỉ</option>
                                                        <option value="role">Quyền tài khoản</option>
                                                    </select>
                                                    <input class="au-input" type="text" name="search" placeholder="Tìm kiếm"" />
                                                    <button class="au-btn--submit" type="submit">
                                                        <i class="zmdi zmdi-search"></i>
                                                    </button>
                                                </form>

                                                <button class="au-btn au-btn-icon au-btn--green au-btn--small" data-toggle="modal" data-target="#add_user">
                                                    <i class="zmdi zmdi-plus"></i>Thêm người dùng</button>                                               
                                            </div>
                                        </div>
                                        <div class="table-responsive table-responsive-data2">
                                            <table class="table table-data2">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Tên tài khoản</th>
                                                        <th>Tên người dùng</th>
                                                        <th>Email</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Quyền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                <% list.rows.forEach(function(item){%>
                                                        <tr class="tr-shadow">
                                                            <td name="id"><%= item.id %></td>
                                                            <td name="username"><%= item.username %></td>
                                                            <td name="full_name"><%= item.full_name %></td>
                                                            <td name="email"><%= item.email %></td>
                                                            <td name="address"><%= item.address %></td>    
                                                            <td name="role"><%= item.role %></td>                                                   
                                                            <td>
                                                                <div class="table-data-feature">
                                                                    <button type="button" class="edit" title="Edit" data-toggle="modal" data-target="#edit_user"><i class="material-icons">&#xE254;</i></button>
