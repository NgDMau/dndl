<script>

    $(document).on("click", ".item", function(){
        var ele = this;
        $('#name').val($(ele).find("td:nth-child(1)").text());
        submit(ele);
        
    });
    function read_selected(ele){
        responsiveVoice.speak("Bạn đã chọn công việc: " + $(ele).find("td:first").text(),'Vietnamese Female')
        return new Promise(resolve => {
            setTimeout(() => {
                resolve('resolved');
            }, 5000);
        });
    }

    async function submit(ele){
        let result = await read_selected(ele);
        if (result) {
            $("form").submit();
        }
    }

    function getTask(list_task) {
        $( "#addhere" ).empty();
        var cols = ["id","name", "type", "rate"];
        for (var i = 0; i < list_task.length; i++) {
            var newRow = document.createElement("tr");
            newRow.setAttribute("class", "item");
            for (var colIndex = 0; colIndex < cols.length; colIndex++) {
                var newCell = document.createElement("td");
                var val = list_task[i][cols[colIndex]];
                newCell.innerHTML = val;
                newRow.append(newCell);
            }
            document.getElementById("addhere").appendChild(newRow);
        }
    }

    function pagination(current_page, total_page){
        if (current_page == total_page) {
            document.getElementById("previous").style.visibility = "visible";
            document.getElementById("next").style.visibility = "hidden";
            $("#current > a").text(current_page);
        }else if(current_page == 1){
            document.getElementById("previous").style.visibility = "hidden";
            document.getElementById("next").style.visibility = "visible";
            $("#current > a").text(current_page);
        }else{
            document.getElementById("previous").style.visibility = "visible";
            document.getElementById("next").style.visibility = "visible";
            $("#current > a").text(current_page);
        }

        if(total_page == 1){
            document.getElementById("previous").style.visibility = "hidden";
            document.getElementById("next").style.visibility = "hidden";
            $("#current > a").text(current_page);
        }
        
    }

    $(document).on("click", "#next", function(){
        var page = parseInt($("#current").text())+1
        var url = "/project?page=" + page;

        $.get(url, function( result ) {
            getTask(result.data)
            pagination(result.current_page,result.total_page)
            console.log(result)
        });
        
    });

    $(document).on("click", "#previous", function(){
        var page = parseInt($("#current").text())-1
        var url = "/project?page=" + page;

        $.get(url, function( result ) {
            getTask(result.data)
            pagination(result.current_page,result.total_page)
            console.log(result)
        });
        
    });


    $.get( "/project", function( result ) {
        getTask(result.data)
        pagination(result.current_page,result.total_page)
        console.log(result)
    });




</script>

