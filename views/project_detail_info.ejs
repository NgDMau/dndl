<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   
    <!-- Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="/css/project_manage.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- JQuery -->
    <script src="/js/jquery/jquery.min.js"></script>

    <title>Giới thiệu - Inlab</title>
    <link rel="shortcut icon" type="image/png" href="/img/logoInlabSquare.png"/>

</head>

<body>

    <header>
        <%- include("header.ejs") %>
    </header>

    <div class="body">
      <div class="body-header">
        <h2 id="project-name"></h2>
        <div class="divide-line"></div>
      </div>
      <div id="quick-info">
        <h3>Tiến độ</h3>
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 0%; background-color: #FFC107; border-radius: 20px; height: 30px; color: #000; font-weight: 500;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
        <div class="card-container">
          <div class="card card-light-yellow" id="task_isChecked">
            <img class="card-img" src="/img/research.svg"/>
            <h4><b>0</b></h4>
            <p>câu đã được kiểm tra</p>
          </div>
          <div class="card card-dark-yellow" id="total_worker">
            <img class="card-img" src="/img/people.svg"/>
            <h4><b>0</b></h4>
            <p>workers thực hiện dán nhãn</p>
          </div>
          <div class="card card-light-yellow" id="total_cost">
            <img class="card-img" src="/img/money.svg"/>
            <h4><b>0 vnd</b></h4>
            <p>phải trả tính tới thời điểm hiện tại</p>
          </div>
          <div class="card card-dark-yellow" id="wrong_rate">
            <img class="card-img" src="/img/failure.svg"/>
            <h4><b>0%</b></h4>
            <p>tỉ lệ câu sai</p>
          </div>
        </div>
      </div>

      <div class="table-container">
        <div id="tracking-bar" class="show-flex">
          <div>
            <h3>Tracking</h3>
            <div class="divide-line"></div>
          </div>
          <button id="by-task" class="detail-table-button hover">Theo task</button>
          <button id="by-worker" class="detail-table-button">Theo worker</button>
        </div>
        <div id="search-bar" class="show-flex">
          <p>Search</p>
          <input type="text" id="search">
        </div>
        <div id="task-table" class="full-project-table">
          <div class="project-table-header project-table-row">
            <p class="project-table-element">Task ID</p>
            <p class="project-table-element">Tên worker dán nhãn</p>
            <p class="project-table-element">Ngày thực hiện</p>
            <p class="project-table-element">Thời gian dán nhãn (giây)</p>
            <p class="project-table-element">Trạng thái</p>
            <p class="project-table-element">Tiền công (vnđ)</p>
          </div>
          <div id="task_kpi">
          </div>
          
        </div>

        <div id="worker-table" class="full-project-table" style="display: none;">
          <div class="project-table-header project-table-row">
            <p class="project-table-element">Tên worker</p>
            <p class="project-table-element">Số task đã thực hiện</p>
            <p class="project-table-element">Thời gian dán nhãn trung bình</p>
            <p class="project-table-element">Số task đúng/tổng số task thực hiện</p>
          </div>
          <div id="worker_kpi">
          </div>
        </div>
      </div>
      
    </div>

    <footer>
        <%- include("footer.ejs") %>
    </footer>




    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    

</body>
    <script>
        $(document).on('click',function(){
        $('.collapse').collapse('hide');
        })
        AOS.init();
    </script> 

    <script>
      $('.detail-table-button').on('click', function(e) {
        if (e.target.id === 'by-task') {
          e.target.classList.add('hover');
          document.getElementById('by-worker').classList.remove('hover');
          const taskTable = document.getElementById('task-table');
          const workerTable = document.getElementById('worker-table');
          taskTable.style.display = 'block';
          workerTable.style.display = 'none';
        }
        else {
          e.target.classList.add('hover');
          document.getElementById('by-task').classList.remove('hover');
          const taskTable = document.getElementById('task-table');
          const workerTable = document.getElementById('worker-table');
          taskTable.style.display = 'none';
          workerTable.style.display = 'block';
        }
      })
    </script>

    <script>
        function getKPI(data) {
          var progress = Math.round(parseInt(data.task_finish)*100/parseInt(data.total_task))
          var wrong_rate = Math.round(parseInt(data.task_wrong)*100/parseInt(data.task_finish))
          console.log("wrong no", data.task_wrong);
          console.log("total no", data.task_finish);
          $(".progress-bar").css("width", progress+"%");
          $(".progress-bar").text(progress+"%");
          $("#task_isChecked > h4 > b").text(data.task_ischecked + "/" + data.total_task);
          $("#total_worker > h4 > b").text(data.total_worker);
          $("#total_cost > h4 > b").text(data.sum_cost+" vnđ");
          $("#wrong_rate > h4 > b").text(wrong_rate+"%");id="project-name"
          $("#project-name").text(data.name);
        }

        function getKpiByWorker(data) {
          $( "#worker_kpi" ).empty();
          var cols = ["worker_name","total_task", "avg_time", "task_istrue"];
          for (var i = 0; i < data.length; i++) {
            var newRow = document.createElement("div");
            newRow.setAttribute("class", "project-table-row");
            for (var colIndex = 0; colIndex < cols.length; colIndex++) {
                var newCell = document.createElement("p");
                newCell.setAttribute("class", "project-table-element");
                var val = data[i][cols[colIndex]];
                newCell.innerHTML = val;
                newRow.append(newCell);
            }
            document.getElementById("worker_kpi").appendChild(newRow);
          }
        }

        function getKpiByTask(data) {
          $( "#task_kpi" ).empty();
          var cols = ["id","worker_name", "finish_at", "finish_time", "reviewer_decision", "cost"];
          for (var i = 0; i < data.length; i++) {
            var newRow = document.createElement("div");
            newRow.setAttribute("class", "project-table-row");
            for (var colIndex = 0; colIndex < cols.length; colIndex++) {
                var newCell = document.createElement("p");
                newCell.setAttribute("class", "project-table-element");
                if (colIndex==4) {
                  var val = data[i][cols[colIndex]];
                  switch (val) {
                    case null:
                      newCell.innerHTML = "Chưa kiểm tra";
                    break;
                  
                    case 'true':
                      newCell.innerHTML = "Đúng";
                    break;

                    case 'false':
                      newCell.innerHTML = "Sai";
                    break;
                  }
                }else{
                  var val = data[i][cols[colIndex]];
                  newCell.innerHTML = val;
                }
                
                newRow.append(newCell);
            }
            document.getElementById("task_kpi").appendChild(newRow);
          }
        }


        $.get( "/project/"+'<%- project_id %>', function( result ) {
          getKPI(result[0])
          console.log(result)
        });

        $.get( "/project/"+'<%- project_id %>'+"/worker", function( result ) {
          getKpiByWorker(result)
          console.log(result)
        });

        $.get( "/project/"+'<%- project_id %>'+"/task", function( result ) {
          getKpiByTask(result)
          console.log(result)
        });
    </script>
</html>