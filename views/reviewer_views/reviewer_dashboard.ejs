<script>

    $(document).on("click", ".item", function(){
        var ele = this;
        $('#project_id').val($(ele).find("td:nth-child(2)").text());
        console.log($(ele).find("td:nth-child(2)").text())
        console.log($('#project_id').val())
        console.log(document.getElementById('testform'))
        submit(ele);
        
    });
    function read_selected(ele){
        responsiveVoice.speak("Bạn đã chọn công việc: " + $(ele).find("td:first").text(),'Vietnamese Female')
        return new Promise(resolve => {
            setTimeout(() => {
                resolve('resolved');
            }, 5000);
        });
    }

    async function submit(ele){
        let result = await read_selected(ele);
        if (result) {
            $("form").submit();
        }
    }

